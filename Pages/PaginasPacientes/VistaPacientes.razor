@page "/api/pacientes"
@using System.ComponentModel.DataAnnotations
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<HospitalContext> HospitalDBContext;
@using Syncfusion.Blazor.Grids;

<PageTitle>Vista Pacientes</PageTitle>
<BarraSuperior></BarraSuperior>



<div class="flex">
    <div class="w-1/7 bg-gray-700">
        <BarraLateral></BarraLateral>
    </div>
    <div class="w-full">
        <div class="col-lg-12 control-section">
            <div class="content-wrapper">
                <div>
                    <div class="w-full text-white px-4 py-4 flex-col ">
                    <BarraBusqueda Placeholder="Buscar Paciente" RutaPredefinida="@RutasDefinidas.CrearPaciente"></BarraBusqueda>
                    </div>

                    <SfGrid DataSource="@PacientesMostrados" AllowPaging="true">
                        <GridColumns>
                            <GridColumn Field=@nameof(Pacientes.IdPac) HeaderText="ID"></GridColumn>
                            <GridColumn Field=@nameof(Pacientes.PacNombre) HeaderText="Nombre"></GridColumn>
                            <GridColumn Field=@nameof(Pacientes.PacApellido) HeaderText="Apellido"></GridColumn>
                            <GridColumn Field=@nameof(Pacientes.PacDireccion) HeaderText="Dirección"></GridColumn>
                            <GridColumn Field=@nameof(Pacientes.PacFechRegistro) HeaderText="Fecha de Registro"></GridColumn>
                            <GridColumn Field=@nameof(Pacientes.PacGs) HeaderText="Grupo Sanguíneo"></GridColumn>
                            <GridColumn Field=@nameof(Pacientes.PacSexo) HeaderText="Sexo"></GridColumn>
                        </GridColumns>
                    </SfGrid>
                </div>
            </div>
        </div>
    </div>
</div>