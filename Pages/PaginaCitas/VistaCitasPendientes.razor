@page "/api/citaspendientes"
@attribute [Authorize]

<BarraSuperior></BarraSuperior>

<div class="flex">

    <div class="w-1/7 bg-gray-700">
        <BarraLateral></BarraLateral>
    </div>

    <div class="flex-grow p-4">
        <h2 class="mb-3">Citas Pendientes</h2>

        @if (citasPendientes.Any())
        {
            foreach (var cita in citasPendientes)
            {
                <div class="bg-white shadow rounded-lg p-6 mb-3">
                    <h5 class="text-lg font-semibold mb-2">Cita con ID: {cita.IdCita}</h5>
                    <p class="text-gray-700 mb-3">{cita.Fecha}</p>
                    <div class="flex">
                        <button class="px-3 py-2 rounded text-white bg-green-500 hover:bg-green-600 mr-2" @onclick="() => AprobarCita(cita)">Aprobar</button>
                        <button class="px-3 py-2 rounded text-white bg-red-500 hover:bg-red-600" @onclick="() => DenegarCita(cita)">Denegar</button>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="bg-blue-100 border-t border-b border-blue-500 text-blue-700 px-4 py-3 mb-4" role="alert">
                No hay citas pendientes.
            </div>
        }

        <h2 class="mb-3 mt-5">Citas Aprobadas</h2>

        @if (citasAprobadas.Any())
        {
            foreach (var cita in citasAprobadas)
            {
                <div class="bg-white shadow rounded-lg p-6 mb-3">
                    <h5 class="text-lg font-semibold mb-2">Cita con ID: {cita.IdCita}</h5>
                    <p class="text-gray-700 mb-3">{cita.Fecha}</p>
                </div>
            }
        }
        else
        {
            <div class="bg-blue-100 border-t border-b border-blue-500 text-blue-700 px-4 py-3" role="alert">
                No hay citas aprobadas.
            </div>
        }
    </div>
</div>
