@page "/api/citas/gestionarcita/{idCita}"
<PageTitle>Vista de Gestion de cita</PageTitle>

<BarraSuperior></BarraSuperior>

<div class="flex justify-center pt-5 pb-5">
    <div class="flex justify-center pt-5 pb-5">
        <div class="pr-2">
            <button @onclick="NavigateBack" class="bg-blue-400 hover:bg-blue-600 text-white font-bold py-4 px-4 rounded">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 12h-15m0 0l6.75 6.75M4.5 12l6.75-6.75" />
                </svg>
            </button>
        </div>
        <div class="mb-5 text-start">
            <h2 class="font-bold text-2xl text-center">Vista avanzada</h2>
            <br>
            <div class="p-8 shadow-lg w-full max-w-5xl rounded-lg relative">

                <EditForm Model="@citaSeleccionada" OnValidSubmit="HandleValidSubmit">
                    <DataAnnotationsValidator />

                    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                        <label for="trabajador">Trabajador:</label>
                        <InputSelect id="trabajador" @bind-Value="citaSeleccionada.TrabajadorId" class="form-control">
                            @foreach (var t in trabajadores)
                            {
                                <option value="@t.idTrab">@t.TrabNombre</option>
                            }
                        </InputSelect>
                    </div>

                    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                        <label for="paciente">Paciente:</label>
                        <InputSelect id="paciente" @bind-Value="citaSeleccionada.PacienteId" class="form-control">
                            @foreach (var paciente in pacientes)
                            {
                                <option value="@paciente.idPac">@paciente.PacNombre</option>
                            }
                        </InputSelect>
                    </div>

                    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                        <label for="fecha">Fecha para la cita:</label>
                        <input type="datetime-local" @bind="citaSeleccionada.Fecha" id="fecha" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                    </div>

                    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                        <label for="estado">Estado de la cita:</label>
                        <select id="estado" @bind="@citaSeleccionada.Estado" >
                            <option value="Pendiente">Pendiente</option>
                            <option value="Aceptado">Aceptado</option>
                            <option value="Rechazado">Rechazado</option>
                            </select>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="mt-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-cyan-400 hover:enabled:bg-cyan-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50">
                            Guardar Cambios
                        </button>
                    </div>
                </EditForm>

            </div>
        </div>
    </div>
</div>
<ToastComponent></ToastComponent>