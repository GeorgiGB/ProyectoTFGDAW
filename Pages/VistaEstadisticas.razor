@page "/api/estadisticas"

<PageTitle>Estadisticas</PageTitle>
<BarraSuperior></BarraSuperior>

<div class="flex">
    <!-- Sidebar -->
    <div class="w-1/7 bg-gray-700">
        <BarraLateral></BarraLateral>
    </div>

    <!-- Contenido principal -->
    <div class="w-full px-4 py-4">
        <!-- Gráfico de turnos -->
        <div class="control-section">
            <div class="w-1/2 pr-4">
                <div class="border-r border-blue-500">
                    @if(turnoData == null || !turnoData.Any())
                    {
                        <h1>Estado de los datos</h1>
                        <div>No hay datos a mostrar</div>
                    }else{
                        <GraficoDonut TituloPrincipal="Clasificacion de turnos de trabajadores" DatosMostrar="@turnoData" XName="Turno" YName="Contador" NombreTitulo="Clasificacion de turnos de trabajadores"></GraficoDonut>
                    }
                </div>
            </div>
            <div class="w-1/2 pr-4">
                <div class="border-r border-blue-500">
                    @if(citaData == null || !citaData.Any())
                    {
                        <h1>Estado de las citas</h1>
                        <div>No hay datos a mostrar</div>
                    }
                    else
                    {
                        <GraficoDonut TituloPrincipal="Estado de las citas" DatosMostrar="@citaData" XName="Turno" YName="Contador" NombreTitulo="Estado de las citas"></GraficoDonut>
                    }
                    
                </div>
            </div>
            <div class="w-1/2 pr-4">
                <div class="border-r border-blue-500">
                    @if (gsDatas == null || !gsDatas.Any())
                    {
                        <h1>Estado de los pacientes</h1>
                        <div>No hay datos a mostrar</div>
                    }
                    else
                    {
                        <GraficoDonut TituloPrincipal="Clasificacion de GS de los Pacientes" DatosMostrar="@gsDatas" XName="Turno" YName="Contador" NombreTitulo="Clasificacion Grupos Sanguineos sobre de Pacientes"></GraficoDonut>
                    }
                    
                </div>
            </div>
        </div>
    </div>
</div>

                    