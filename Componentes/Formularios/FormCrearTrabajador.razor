<div class="flex justify-center pt-5 pb-5">
    <div class="p-8 bg-gray-200 shadow-lg w-full max-w-5xl rounded-lg relative">
        <EditForm Model="NuevoTrabajador" OnValidSubmit="@CrearTrabajador">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="flex flex-wrap m-xl-3 mb-6">
                <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                    <label for="TrabNombre">Nombre:</label>
                    <InputText id="TrabNombre" @bind-Value="NuevoTrabajador.TrabNombre"  class="w-full px-3 py-2 border rounded-md" />
                </div>

                <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                    <label for="TrabApellido">Apellido:</label>
                    <InputText id="TrabApellido" @bind-Value="NuevoTrabajador.TrabApellido"  class="w-full px-3 py-2 border rounded-md" />
                </div>

                <div class="w-full px-3 mb-6">
                    <label for="TrabCorreo">Correo:</label>
                    <InputText id="TrabCorreo" @bind-Value="NuevoTrabajador.TrabCorreo"  class="w-full px-3 py-2 border rounded-md" />
                </div>

                <div class="w-full px-3 mb-6">
                    <label for="TrabDireccion">Dirección:</label>
                    <InputText id="TrabDireccion" @bind-Value="NuevoTrabajador.TrabDireccion"  class="w-full px-3 py-2 border rounded-md" />
                </div>

                <div class="w-full px-3 mb-6">
                    <label for="TrabTel">Telefono:</label>
                    <InputText id="TrabTel" @bind-Value="NuevoTrabajador.TrabTel" typeof="number"  class="w-full px-3 py-2 border rounded-md" />
                </div>
                <div class="flex p-2">
                    <label for="puesto">Puesto:</label>
                    <select id="puesto" @bind="@NuevoTrabajador.TrabPuesto">
                        <option value="" disabled>Seleccione un puesto</option>
                        @foreach (var puesto in PuestosTrabajo)
                        {
                            <option value="@puesto">@puesto</option>
                        }
                    </select>
                </div>
                <div class="flex p-2">
                    <label for="sexo">Genero:</label>
                    <select id="sexo" @bind="@NuevoTrabajador.TrabSexo">
                        <option value="" disabled>Seleccione un genero</option>
                        @foreach (var g in Genero)
                        {
                            <option value="@g">@g</option>
                        }
                    </select>
                </div>
                <div class="flex p-2">
                    <label for="sexo">Horario:</label>
                    <select id="sexo" @bind="@NuevoTrabajador.TrabHorario" >
                        <option value="" disabled>Seleccione un horario</option>
                        @foreach (var h in Horario)
                        {
                            <option value="@h">@h</option>
                        }
                    </select>

                    <br />
                    <div class="flex justify-end">
                        <button class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline @(isEditing ? "bg-gray-500" : "")" >Submit</button>
                    </div>
                </div>
            </div>
        </EditForm>
    </div>
</div>